.side-bar
  .side-header
    .side-box
      %h3.side-box__left
        = current_user.name
      %ul.side-box__right
        %li.side-box__right__icon
          = link_to new_group_path, class: "Contents__btn" do
            = icon('fas', 'edit')
        %li.side-box__right__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-under
    - current_user.groups.each do |group|
      .side-group
        = link_to group_messages_path(group) do
          .side-group__name
            = group.name
          .side-group__messages
            = group.show_last_message
